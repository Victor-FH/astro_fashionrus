---
import Layout from "../src/layouts/Layout.astro";
import ProductCard from "../src/components/ProductCard.astro";
const fashionUrl = "https://kea-alt-del.dk/t7/api/products";
const data = await fetch(fashionUrl).then((res) => res.json());
console.log(data);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products By Category</title>
    <link rel="stylesheet" href="css/base.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>

  <body class="productlist">
    <header class="mainNav">
      <a href="index.html">
        <h1>Fashion<span>R</span>Us</h1>
      </a>
      <nav>
        <a href="category.html">Categories</a>
        <a href="#">Brands</a>
        <a href="#">Seasons</a>
      </nav>
    </header>
    <h2>Apparel</h2>

    <Layout>
      <h1>Products</h1>
      <main>
        {data.map((product) => <ProductCard {product} />)}
      </main>
    </Layout>
    <script src="js/produktliste.js"></script>
  </body>
</html>
